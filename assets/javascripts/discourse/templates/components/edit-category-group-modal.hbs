{{#d-modal-body id="edit-category-group-modal" title="flexible_rate_limits.admin.category_group"}}

  {{#if errorMsg}}
    <div class="alert">{{errorMsg}}</div>
  {{/if}}

  <table class="flr-table-modal">
    <tbody>
      <tr>
        <td class="frl-label">{{i18n "flexible_rate_limits.admin.group_name"}}</td>
        <td>{{input type="text" value=categoryGroupName}}</td>
      </tr>

      <tr>
        <td class="frl-label">{{i18n "flexible_rate_limits.admin.post_limit"}}</td>
        <td>{{input type="number" value=postLimit min=1}}</td>
      </tr>

      <tr>
        <td class="frl-label">{{i18n "flexible_rate_limits.admin.topic_limit"}}</td>
        <td>{{input type="number" value=topicLimit min=1}}</td>
      </tr>
    </tbody>
  </table>

{{/d-modal-body}}

<div class="modal-footer">
  {{d-button
    disabled=disabled
    action="save"
    class="btn-large btn-primary"
    label="flexible_rate_limits.admin.save"}}
</div>